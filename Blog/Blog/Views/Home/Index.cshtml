@model IList<Blog.Models.Post>

@if(ViewBag.Termo != null)
{
    <h3>Foi realizada uma busca por @ViewBag.Termo</h3>
}
    @if (Model.Count == 0)
    {
        <article><p>Não foram encontrados resultados para a busca.</p></article>
    }
@foreach (var p in Model)
{
    <article>
        <h1>@p.Titulo</h1>
        <p>@p.Resumo</p>
    </article>
}
