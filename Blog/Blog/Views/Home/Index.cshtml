
@{
    Layout = null;
}

<!DOCTYPE html>
@model IList<Blog.Models.Post>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2>Lista de Posts</h2>
        <table>
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Resumo</th>
                    <th>Categoria</th>
                    <th>Publicado?</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td><a href="/Home/Visualiza/@p.Id">@p.Titulo</a></td>
                        <td>@p.Resumo</td>
                        <td>@p.Categoria</td>
                        <td>
                            @if (p.Publicado)
                            {
                                @Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicacao))
                            }
                            else
                            {
                                @Html.Raw("Não")
                            }
                        </td>
                        <td>
                            <a href="/Home/RemovePost/@p.Id">Remover</a>
                            <a href="/Home/PublicaPost/@p.Id">Publicar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
